{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,

    "outDir": "out",
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,

    /* Linting */
    "strict": true
  },
  "include": ["src"]
}
